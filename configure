#!/bin/bash

if command -v brew &> /dev/null; then
    brew install gcc make openssl@1.1 ossp-uuid pkg-config curl coreutils
    curl https://sh.rustup.rs -sSf -y | sh
elif command -v apt &> /dev/null; then
    # ubuntu / debian
    sudo apt install gcc make build-essential libssl-dev uuid-dev pkgconf curl zip libc6
    curl https://sh.rustup.rs -sSf -y | sh
elif command -v xbps-install &> /dev/null; then
    # void linux
    xbps-install pkg-config gcc make which openssl openssl-devel libuuid libuuid-devel libsanitizer-devel findutils zip curl
    curl https://sh.rustup.rs -sSf -y | sh
elif command -v dnf &> /dev/null; then
    #TODO
    exit 11
elif command -v yum &> /dev/null; then
    #TODO
    exit 11
else
    echo "No package manager was recognized. no required dependencies were installed"
    exit 11
fi

